    <script>
        // Admin Unlock
        function unlockAdmin() {
            let pass = prompt("Enter Owner Password:");
            if(pass === "lahore786") {
                document.querySelectorAll('.admin-section').forEach(el => el.style.display = 'block');
                alert("Owner Mode Active!");
            } else { alert("Ghalat Password!"); }
        }

        // Add Product from Gallery
        function addProduct() {
            const name = document.getElementById('pName').value;
            const price = document.getElementById('pPrice').value;
            const fileInput = document.getElementById('pImgFile');
            const file = fileInput.files[0];

            if (!name || !price || !file) {
                alert("Meharbani karke Bed ka naam, price aur photo select karein!");
                return;
            }

            // Photo ko "Display" karne ke liye read karna
            const reader = new FileReader();
            reader.onload = function(e) {
                const imgUrl = e.target.result;
                const grid = document.getElementById('product-grid');
                const id = 'prod-' + Date.now();
                
                const card = `
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200" id="${id}">
                        <img src="${imgUrl}" class="w-full h-64 object-cover">
                        <div class="p-5 text-center">
                            <h3 class="font-bold text-lg text-gray-800">${name}</h3>
                            <p class="text-yellow-700 font-bold text-xl my-2">PKR ${price}</p>
                            <a href="https://wa.me/923270469551?text=Muje ye ${name} chahye" class="block bg-gray-800 text-white py-2 rounded-lg font-bold hover:bg-yellow-600 transition">Order on WhatsApp</a>
                            <button onclick="removeProduct('${id}')" class="admin-section mt-3 w-full text-red-600 font-bold text-xs bg-red-50 py-1 rounded border border-red-100 block">DELETE</button>
                        </div>
                    </div>`;
                
                grid.insertAdjacentHTML('afterbegin', card);
                
                // Clear fields
                document.getElementById('pName').value = "";
                document.getElementById('pPrice').value = "";
                fileInput.value = "";
                
                // Keep admin buttons visible
                document.querySelectorAll('.admin-section').forEach(el => el.style.display = 'block');
            };
            reader.readAsDataURL(file);
        }

        function removeProduct(id) {
            if(confirm("Hatana chahte hain?")) document.getElementById(id).remove();
        }

        function updateSiteName() {
            let name = document.getElementById('newName').value;
            if(name) {
                document.getElementById('display-title').innerText = name;
                alert("Updated!");
            }
        }
    </script>
